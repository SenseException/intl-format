{
  "name": "senseexception/intl-format",
  "description": "A wrapper library for PHP intl messages in sprintf style",
  "minimum-stability": "dev",
  "type": "library",
  "license": "MIT",
  "keywords": ["intl", "i18n", "formatter", "icu", "i18n", "internationalization", "messages", "sprintf"],
  "authors": [
    {
      "name": "Claudio Zizza",
      "email": "claudio@budgegeria.de"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-intl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "infection/infection": "^0.18",
    "phpstan/phpstan": "^0.12.83",
    "phpstan/phpstan-phpunit": "^0.12.18",
    "vimeo/psalm": "^4.7",
    "psalm/plugin-phpunit": "^0.15.1",
    "doctrine/coding-standard": "^8.2"
  },
  "autoload": {
    "psr-4": {
      "Budgegeria\\IntlFormat\\": "src/"
    },
    "exclude-from-classmap": ["tests/*"]
  },
  "autoload-dev": {
    "psr-4": {
      "Budgegeria\\IntlFormat\\Tests\\": "tests/"
    }
  },
  "prefer-stable": true
}
