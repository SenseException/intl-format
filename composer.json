{
  "name": "senseexception/intl-format",
  "description": "A wrapper library for PHP to format and internationalize values in messages like sprintf ",
  "minimum-stability": "stable",
  "type": "library",
  "license": "MIT",
  "keywords": ["intl", "i18n", "formatter", "icu", "i18n", "internationalization", "messages", "sprintf"],
  "authors": [
    {
      "name": "Claudio Zizza",
      "email": "claudio@budgegeria.de"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-intl": "*"
  },
  "require-dev": {
    "infection/infection": "^0.27.0",
    "doctrine/coding-standard": "^12.0",
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^2.0",
    "vimeo/psalm": "^5.25",
    "psalm/plugin-phpunit": "^0.19.0",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpstan/phpstan-deprecation-rules": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Budgegeria\\IntlFormat\\": "src/"
    },
    "exclude-from-classmap": ["tests/*"]
  },
  "autoload-dev": {
    "psr-4": {
      "Budgegeria\\IntlFormat\\Tests\\": "tests/"
    },
    "files": ["src/intl-format.php"]
  },
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "infection/extension-installer": true
    }
  }
}
