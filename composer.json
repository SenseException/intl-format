{
  "name": "senseexception/intl-format",
  "description": "A wrapper library for PHP intl messages in sprintf style",
  "minimum-stability": "stable",
  "type": "library",
  "license": "MIT",
  "keywords": ["intl", "i18n", "formatter", "icu", "i18n", "internationalization", "messages", "sprintf"],
  "authors": [
    {
      "name": "Claudio Zizza",
      "email": "claudio@budgegeria.de"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-intl": "*"
  },
  "require-dev": {
    "infection/infection": "^0.26",
    "doctrine/coding-standard": "^10.0",
    "phpunit/phpunit": "^9.5",
    "phpstan/phpstan": "^1.8",
    "phpstan/phpstan-phpunit": "^1.1",
    "vimeo/psalm": "^4.24",
    "psalm/plugin-phpunit": "^0.16"
  },
  "autoload": {
    "psr-4": {
      "Budgegeria\\IntlFormat\\": "src/"
    },
    "exclude-from-classmap": ["tests/*"]
  },
  "autoload-dev": {
    "psr-4": {
      "Budgegeria\\IntlFormat\\Tests\\": "tests/"
    }
  },
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "infection/extension-installer": true
    }
  }
}
